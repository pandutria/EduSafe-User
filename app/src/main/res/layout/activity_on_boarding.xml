<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ui.activity.OnBoardingActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="455dp"
        android:src="@drawable/img_1"/>

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Bergabung dengan Komunitas Belajar"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belajar tidak lagi sendiri! Dapatkan dukungan dari mentor dan teman-teman baru dalam komunitas belajar MyBoost. Mari berkembang bersama!"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/lightGray"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLanjut"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Lanjut"
        android:fontFamily="@font/poppins_semibold"
        app:cornerRadius="10dp"
        android:layout_marginTop="40dp"
        android:textSize="17sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:backgroundTint="@color/blue"
        />


</LinearLayout>