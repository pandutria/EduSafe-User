<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Pandu (Kelas X)"
            android:textColor="@color/gray"
            android:visibility="gone"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Judul : cdscds"
            android:textAlignment="textStart"
            android:textColor="@color/lightGray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvIsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Thread : cdscdssssssssssssssssdcccccccccccccccccccccccccccccccccccccccccccccsdcdssssssssssssssssssssssssssssssssscdscds"
            android:textAlignment="textStart"
            android:textColor="@color/lightGray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Tanggal : cdscds"
            android:textAlignment="textStart"
            android:textColor="@color/lightGray"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHapus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#BF3131"
                android:fontFamily="@font/poppins_semibold"
                android:text="Hapus Thread"
                android:layout_marginRight="5dp"
                android:textSize="15sp"
                app:cornerRadius="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/poppins_semibold"
                android:text="Edit Thread"
                android:textSize="15sp"
                app:cornerRadius="10dp" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>